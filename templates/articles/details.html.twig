{% extends "base.html.twig" %}

{% block title %}Article details{% endblock %}

{% block body %}
    <div class="container mt-3">
        <div class="row">
            <div class="col">
                <h1>{{ article.title }}</h1>
                <h3>{{ article.subtitle }}</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <p>{{ article.body }}</p>
            </div>
        </div>
    </div>
{% endblock %}